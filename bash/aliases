alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'
alias h=history
alias ll='ls -l'

# rails < 3
alias ss='./script/server'
alias sc='./script/console'
alias sd='./script/dbconsole'
alias sg='./script/generate'

#rails >= 3
alias con='rails console'
alias dbcon='rails dbconsole'
alias gen='rails generate'
alias server='rails server'

alias cuc='cucumber'
alias spek='spec -f n -c'

# git
alias gadd='git add -u && git add . && git status -sb'
alias gam='git commit --amend -CHEAD'
alias gap='git add -p'
alias gb='git branch'
alias gca='git commit --all'
alias gco='git checkout'
alias gd='git diff'
alias gdc='git diff --cached'
alias gitc='git commit -m'
alias gl='git log'
alias gpl='git pull --rebase && git submodule update --init --recursive'
alias grd='git ls-files --deleted | xargs git rm'
alias gsl='git stash list'
alias gsp='git stash pop'
alias gss='git stash save'
alias gst='git status -sb'
alias gsu='git submodule update --init --recursive'

# mysql
alias mstart='/usr/local/Cellar/mysql/current/share/mysql/mysql.server start'
alias mstop='/usr/local/Cellar/mysql/current/share/mysql/mysql.server stop'

# postgres
alias pstart='pg_ctl -D /usr/local/var/postgres -l /usr/local/var/postgres/server.log start'
alias pstop='pg_ctl -D /usr/local/var/postgres stop -s -m fast'

alias ms='mongod run --config /usr/local/Cellar/mongodb/current/mongod.conf'

